{
    "manifest_version": 3,
    "name": "twitter-utils",
    "version": "1.0.0",
    "permissions": [
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {},
    "options_page": "options.html",
    "content_scripts": [
        {
            "matches": [
                "https://x.com/*"
            ],
            "js": [
                "src/content-scripts/index.tsx"
            ],
            "run_at": "document_end",
            "all_frames": false
        }
    ],
    "background": {
        "service_worker": "src/background/index.ts"
    }
}