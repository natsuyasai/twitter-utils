{
    "manifest_version": 3,
    "name": "twitter-utils",
    "version": "1.0.0",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {},
    "options_page": "options.html",
    "content_scripts": [
        {
            "matches": [
                "https://x.com/*"
            ],
            "js": [
                "src/content-scripts/index.tsx"
            ]
        }
    ],
    "background": {
        "service_worker": "src/background/index.ts",
        "persistent": false
    }
}